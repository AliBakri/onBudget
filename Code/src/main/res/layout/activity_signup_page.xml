<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/createpage2"
    android:orientation="vertical"
    tools:context=".SignupPage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_noborder" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="OnBudget"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="#101E3D"
        android:hint="First Name"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:textColorHint="#101E3D"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="#101E3D"
        android:hint="Last Name"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:textColorHint="#101E3D"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etSignupEmail"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="#101E3D"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="8dp"
        android:textColorHint="#101E3D"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="#101E3D"
        android:hint="Phone Number"
        android:inputType="phone"
        android:paddingLeft="8dp"
        android:textColorHint="#101E3D"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etSignupPassword"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="#101E3D"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:textColorHint="#101E3D"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="#101E3D"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:textColorHint="#101E3D"
        android:textSize="15dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/cbAgreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="I Agree with Terms &amp; Conditions"
        android:textColor="#101E3D"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/createAccount"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#101E3D"
        android:fontFamily="sans-serif-condensed"
        android:onClick="createAccount"
        android:stateListAnimator="@null"
        android:text="Create an Account"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="normal"
        app:cornerRadius="50dp" />

</LinearLayout>