<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".HomePage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="OnBudget"
        android:textColor="#15367A"
        android:textSize="20dp"
        android:textStyle="normal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Your Financial Planner"
        android:textColor="#15367A"
        android:textSize="20dp"
        android:textStyle="normal"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tvName"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#15367A"
                android:textSize="17dp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/settings"
                android:onClick="settings"

                ></ImageView>



        </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Name of Operation:"

        android:textColor="#15367A"
        android:textSize="17dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etReason"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border"
        android:hint="Reason of operation"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textSize="13dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Date of operation"
        android:textColor="#15367A"
        android:textSize="17dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border"
        android:hint="Date"
        android:inputType="date"
        android:paddingLeft="10dp"
        android:textSize="13dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Enter amount of money:"
        android:textColor="#15367A"
        android:textSize="17dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border"
        android:hint="Amount of money"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textSize="13dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Choose type of money:"
        android:textColor="#15367A"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spType"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border"
        android:entries="@array/type"
        android:paddingLeft="10dp"
        android:textSize="13dp" />





    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:backgroundTint="#7CFF8C"
        android:fontFamily="sans-serif-condensed"
        android:onClick="submit"
        android:stateListAnimator="@null"
        android:text="Submit"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:textColor="#15367A"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cornerRadius="50dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="12dp"
            android:background="#E3E2E2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white"
            android:padding="2dp"
            android:text=" or "
            android:textColor="#989898" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnTransHistory"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:backgroundTint="#7CFF8C"
        android:fontFamily="sans-serif-condensed"
        android:onClick="TransHistory"
        android:stateListAnimator="@null"
        android:text="View Transaction History"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:textColor="#15367A"
        android:textSize="13dp"
        android:textStyle="bold"
        app:cornerRadius="50dp" />

</LinearLayout>
